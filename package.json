{
  "name": "react-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "server": "node server.js",
    "build": "NODE_ENV=production webpack --config ./webpack.prd.config.js --mode production",
    "demo": "NODE_ENV=production webpack --config ./webpack.demo.config.js --mode production",
    "eslint": "eslint --ext .jsx,.js src/",
    "lint": "yarn eslint && yarn stylelint",
    "publish": "sh ./scripts/publish.sh",
    "start": "webpack-dev-server --config ./webpack.dev.config.js --host 0.0.0.0",
    "stylelint": "stylelint src/**/*.css"
  },
  "dependencies": {
    "core-js": "^3.4.4",
    "css-loader": "^3.2.0",
    "express": "^4.17.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "lodash": "^4.17.15",
    "lorem-ipsum": "^2.0.3",
    "mini-css-extract-plugin": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack": "^4.0.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/react-dom": "^16.9.0",
    "assets-webpack-plugin": "^3.9.10",
    "babel-eslint": "^10.0.3",
    "clean-webpack-plugin": "^3.0.0",
    "esbuild-loader": "^2.13.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.6.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "prettier": "^1.19.1",
    "react-refresh": "^0.9.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "webpack-cli": "^3.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2",
    "webpackbar": "^5.0.0-3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext .jsx,.js,.ts,.tsx",
      "prettier --write",
      "git add"
    ],
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "ie 11",
    "> 0.5%",
    "last 2 versions"
  ]
}
